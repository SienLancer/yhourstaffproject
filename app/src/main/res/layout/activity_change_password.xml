<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="20dp"
    android:background="@drawable/bgsignin"
    android:orientation="vertical"
    tools:context=".activities.ChangePasswordActivity">

    <ImageButton
        android:id="@+id/back_imgBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:background="@color/background"
        android:tint="#FFFFFF"
        app:srcCompat="@drawable/back_ic" />

    <TextView
        android:id="@+id/title_change_password_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="Change Password"
        android:textColor="#FFFFFF"
        android:textSize="32sp" />

    <EditText
        android:id="@+id/old_password_edt"
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/bg_signin_edt"
        android:ems="10"
        android:hint="Old password"
        android:inputType="textPassword"
        android:paddingLeft="15dp"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:textSize="16sp" />


    <EditText
        android:id="@+id/new_password_edt"
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/bg_signin_edt"
        android:ems="10"
        android:hint="New password"
        android:inputType="textPassword"
        android:paddingLeft="15dp"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/re_new_password_edt"
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/bg_signin_edt"
        android:ems="10"
        android:hint="Re-New password"
        android:inputType="textPassword"
        android:paddingLeft="15dp"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:textSize="16sp" />


    <Button
        android:id="@+id/change_password_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:background="@drawable/bg_signin_btn"
        android:text="Save"
        android:textColor="#FFFFFF"
        android:textSize="16sp" />



</LinearLayout>