<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bgsignin"
    android:orientation="vertical"
    tools:context=".activities.SignInForStaffActivity">



    <TextView
        android:id="@+id/titleSignInS_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="50dp"
        android:text="Sign in for Staff"
        android:textColor="#FFFFFF"
        android:textSize="32sp" />

    <EditText
        android:id="@+id/usernameSLogin_edt"
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/bg_signin_edt"
        android:ems="10"
        android:hint="Username"
        android:inputType="text"
        android:paddingLeft="15dp"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/pwSLogin_edt"
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/bg_signin_edt"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPassword"
        android:paddingLeft="15dp"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/forgot_password_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:paddingRight="20dp"
        android:text="Forgot password?"
        android:textAlignment="textEnd"
        android:textColor="@color/white"
        android:textSize="12dp" />

    <Button
        android:id="@+id/loginS_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="42dp"
        android:background="@drawable/bg_signin_btn"
        android:text="Login"
        android:textColor="#FFFFFF"
        android:textSize="16sp" />




</LinearLayout>